                <tree string="Regulation Of Ribbon  Medal">
                    <field name="name"/>
                    <field name="force_id" />
                    <field name="acquisition" />
                    <field name="shedule_date"/>
                    <field name="serial" />
                    <field name="service_length" attrs="{'invisible': [('acquisition', '!=', 'duration')]}"/>
                    <field name="ribbon_tmpl_id" />
                    <field name="medal_tmpl_id" />
                </tree>
            </field>
        </record>

