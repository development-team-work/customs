    <record id="action_tailor_party_measerment_value" model="ir.actions.act_window">
        <field name="name">Measerment of a Party</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tailor.party.measerment.value</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <record id="action_tailor_item_attribute" model="ir.actions.act_window">
        <field name="name">Attributes for Tailoring Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tailor.item.attribute</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <record id="action_tailor_item_attribute_template" model="ir.actions.act_window">
        <field name="name">Attributes for Tailoring Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tailor.item.attribute.template</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <record id="action_tailor_item_attribute_template_value" model="ir.actions.act_window">
        <field name="name">Item template atribute Values</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tailor.item.attribute.template.value</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
