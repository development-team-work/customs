<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tailor_body_point_list" model="ir.ui.view">
        <field name="name">tailor.body.pointlist</field>
        <field name="model">tailor.body.point</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Body Points to Measure" >
                <field name="name"/>
                <field name="details"/>
            </tree>
        </field>
    </record>
    <record id="tailor_body_point_form" model="ir.ui.view">
        <field name="name">tailor.body.point.form</field>
        <field name="model">tailor.body.point</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Body Points to Measure" >
                <group>
                    <field name="name"/>
                    <field name="details"/>
                </group>
            </form>
        </field>
    </record>

    <record id="tailor_party_measerment_value_list" model="ir.ui.view">
        <field name="name">tailor.party.measerment.value.list</field>
        <field name="model">tailor.party.measerment.value</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Body Points to Measure" >
                <field name="partner_id"/>
                <field name="body_point"/>
                <field name="point_value"/>
            </tree>
        </field>
    </record>
    <record id="tailor_party_measerment_value_form" model="ir.ui.view">
        <field name="name">tailor.party.measerment.value.form</field>
        <field name="model">tailor.party.measerment.value</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Body Points to Measure" >
                <group>
                    <field name="partner_id"/>
                    <field name="body_point"/>
                    <field name="point_value"/>
                </group>
            </form>
        </field>
    </record>

    <record id="tailor_party_measerment_value_list" model="ir.ui.view">
        <field name="name">tailor.party.measerment.value.list</field>
        <field name="model">tailor.party.measerment.value</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Measerment of Body Points" editable="bottom ">
                <field name="partner_id"/>
                <field name="body_point"/>
                <field name="point_value"/>
            </tree>
        </field>
    </record>

    <record id="tailor_item_list" model="ir.ui.view">
        <field name="name">tailor.item.list</field>
        <field name="model">tailor.item</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Items">
                <field name="name"/>
                <field name="related_to"/>
                <field name="product_tmpl_id"/>
                <field name="product_id"/>
                <field name="body_point_ids"/>
            </tree>
        </field>
    </record>
    <record id="tailor_item_form" model="ir.ui.view">
        <field name="name">tailor.item.form</field>
        <field name="model">tailor.item</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Items" editable="bottom">
                <group>

                    <field name="name"/>
                    <field name="related_to"/>
                    <field name="product_tmpl_id"/>
                    <field name="product_id"/>
                </group>
                <group>
                    <field name="body_point_ids">
                        <tree string="Body Points to Measure" editable="bottom ">
                            <field name="name"/>
                            <field name="details"/>
                        </tree>
                    </field>
                </group>
                <group>
                    <field name="attribute_ids">
                        <tree string="Body Points to Measure" editable="bottom ">
                            <field name="name"/>
                            <field name="details"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="tailor_item_attribute_list" model="ir.ui.view">
        <field name="name">tailor.item.attribute.list</field>
        <field name="model">tailor.item.attribute</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Attributes">
                <field name="name"/>
                <field name="details"/>
            </tree>
        </field>
    </record>
    <record id="tailor_item_attribute_form" model="ir.ui.view">
        <field name="name">tailor.item.attribute.form</field>
        <field name="model">tailor.item.attribute</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Attributes">
                <group>
                    <field name="name"/>
                    <field name="details"/>
                </group>
            </form>
        </field>
    </record>

    <record id="tailor_item_attribute_template_list" model="ir.ui.view">
        <field name="name">tailor.item.attribute.template.list</field>
        <field name="model">tailor.item.attribute.template</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Attribute Templates">
                <field name="name"/>
                <field name="item_id"/>
                <field name="attribute_line_ids"/>
            </tree>
        </field>
    </record>
    <record id="tailor_item_attribute_template_form" model="ir.ui.view">
        <field name="name">tailor.item.attribute.template.form</field>
        <field name="model">tailor.item.attribute.template</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Attribute Templates">
                <group>

                    <field name="name"/>
                    <field name="item_id"/>
                </group>
                <group>
                    <field name="attribute_line_ids">
                        <tree editable="bottom">
                            <field name="attribute_id"/>
                            <field name="value"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>
    <record id="tailor_item_attribute_template_value_form" model="ir.ui.view">
        <field name="name">tailor.item.attribute.template.value.form</field>
        <field name="model">tailor.item.attribute.template.value</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Attribute Templates">
                <group>

                    <field name="name"/>
                    <field name="item_template_id"/>
                    <field name="item_id"/>
                    <field name="attribute_id"/>
                    <field name="value"/>
                </group>

            </form>
        </field>
    </record>
    <record id="res_partner_form_nherit" model="ir.ui.view">
        <field name='name'>view.partner.form.inherit</field>
        <field name='model'>res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="gender"/>
            </field>
            <page name="sales_purchases" position="before">
                <page name="tailor_measerment" string="Measerment">
                    <group>
                        <field name="select_item"/>
<!--                        todo here to create a domain to show the points for the selected items-->
                        <field name="measerments" >
                            <tree>
                                <field name="body_point" readonly="1"/>
                                <field name="point_value"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>
<!--ACTIONS-->
