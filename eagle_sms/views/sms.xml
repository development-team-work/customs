<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="writer_form" model="ir.ui.view">
        <field name="name">myshop.sms.form</field>
        <field name="model">sms.test</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="device_id" />
                        <field name="authorisation"/>
                        <field name="send_to"/>
                        <field name="message"/>
                    </group>
                    <button type="object" name="send_sms" string="Send SMS"/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
