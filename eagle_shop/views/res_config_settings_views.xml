<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.eagle_shop</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Eagle Shop" string="Eagle Shop" data-key="eagle_shop" groups="base.group_user">
                        <h2>Feature Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-lg-6 col-12 o_setting_box" id="ribbons" title="If your company deals with service ribbons and medals for police, Army and others">
                                <div class="o_setting_left_pane">
                                    <field name="module_ribbon"/>
                                </div>
                                <div class="o_setting_right_pane" id="ribbon_settings">
                                    <label for="module_ribbon" string="Service Ribbons"/>
                                    <div class="text-muted">
                                        Process operations for Service ribbons for various Force
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-6 col-12 o_setting_box" id="books" title="If your company deals with Books">
                                <div class="o_setting_left_pane">
                                    <field name="module_eagle_book_shop"/>
                                </div>
                                <div class="o_setting_right_pane" id="book_shop_settings">
                                    <label for="module_eagle_book_shop" string="Book Shop"/>
                                    <div class="text-muted">
                                        Deals with Books
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_eagle_shop_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'eagle_shop'}</field>
        </record>

        <menuitem id="menu_eagle_shop_config" name="Settings" parent="menu_eagle_shop_configuration"
            sequence="0" action="action_eagle_shop_configuration" groups="base.group_system"/>
    </data>
</odoo>
