<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- Accounts -->

        <record id="view_ribbon_person_form" model="ir.ui.view">
            <field name="name">ribbon.person.form</field>
            <field name="model">ribbon.person</field>
            <field name="arch" type="xml">
                <form string="Personal Details">
                   <group >
                       <field name="partner_id"/>
                       <field name="id"/>
                       <field name="name"/>
                       <field name="force_name"/>
                       <field name="id_no"/>
                   </group>
                    <group attrs="{'invisible': [('force_name', '=', False)]}">
                     <field name="rank" domain="[('force_name', '=', force_name)]" options="{'no_create': True}" attrs="{'invisible': [('force_name', '=', False)]}"/>
                     <field name="unit" />
                     <field name="post"/>
                     <field name="joining"/>
                     <field name="retired"/>
                     <field name="service_length"/>
                   </group>
                    <group col="4">
                        <field name="cap"/>
                        <field name="belt"/>
                        <field name="name_tag_eng"/>
                        <field name="name_tag_bn"/>
                    </group>
                    <group >
                        <field name="note"/>
                        <field name="conf_note"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_ribbon_force_form" model="ir.ui.view">
            <field name="name">ribbon.force.form</field>
            <field name="model">ribbon.force</field>
            <field name="arch" type="xml">
                <form string="Forces">
                   <group col="4">
                     <field name="name"/>
                     <field name="name"/>

                   </group>
                </form>
            </field>
        </record>
        <record id="ribbon_person_form_action" model="ir.actions.act_window">
        <field name="name">ribbons And Medals</field>
        <field name="res_model">ribbon.person</field>
        <field name="view_mode">form</field>
<!--        <field name="view_id" ref="report_all_channels_sales_view_pivot"/>-->
<!--        <field name="search_view_id" ref="report_all_channels_sales_view_search"/>-->
<!--        <field name="context">{'search_default_team_id': 1, 'search_default_current_year': 1}</field>-->
    </record>
    <menuitem id="ribbon_holder_menu" name="Service Details"
                        parent="ribbon.ribbon_main" action="ribbon_person_form_action"  groups="base.group_user,base.group_partner_manager"/>
    </data>
</odoo>
