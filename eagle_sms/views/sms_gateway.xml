<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="eagle_sms_gateway_form" model="ir.ui.view">
        <field name="name">eagle.sms.gateway.form</field>
        <field name="model">sms.gateway</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="model_name" />
                        <field name="website"/>
                        <field name="user_string"/>
                        <field name="password_string" />
                        <field name="msg_string" />
                        <field name="send_to_string" />
                    </group>
                    <group>
                        <group>
                            <field name="endpoint_sending"/>
                            <field name="method_sending"/>
                        </group>
                        <group>
                            <field name="endpoint_cancel"/>
                            <field name="method_cancel"/>
                        </group>
                        <group>
                            <field name="endpoint_check"/>
                            <field name="method_check"/>
                        </group>
                        <group>
                            <field name="endpoint_search"/>
                            <field name="method_search"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sms_gateway_form_action" model="ir.actions.act_window">
        <field name="name">sms.gateway.form.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sms.gateway</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="eagle_sms_gateway_menu" name="SMS Gateway" parent="eagle_sms_root" action="sms_gateway_form_action" sequence="6"/>
</odoo>
